                            app:layout_constraintEnd_toStartOf="@id/saturday_active"
                            app:layout_constraintTop_toTopOf="@id/saturday_background"
                            app:tint="@color/error_red" />

                        <ImageView
                            android:id="@+id/saturday_active"
